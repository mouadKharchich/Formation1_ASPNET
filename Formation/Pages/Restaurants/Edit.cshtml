@page "{id:int}"
@model Formation.Pages.Restaurants.EditModel
@{
}


<h2>Edit Restaurant</h2>
<form method="post">
    <input type="hidden" asp-for="Restaurant.Id" />

    <div class="form-group mt-2">
        <label asp-for="Restaurant.Name"></label>
        <input asp-for="Restaurant.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Restaurant.Name"></span>
    </div>



    <div class="form-group mt-2">
        <label asp-for="Restaurant.Description"></label>
        <textarea asp-for="Restaurant.Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Restaurant.Description"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>